{
    "extends": ["eslint:recommended"],
    "parserOptions": {
        "ecmaVersion": 6
    },
    "env": {
        "es6": true,
        "node": true
    },
    "rules": {
        "eqeqeq": [2, "smart"],
        "semi": [2, "always"],
        "indent": [2],
        "handle-callback-err": [2],
        "no-trailing-spaces": [2],
        "eol-last": ["error", "always"],
        "no-irregular-whitespace": [2, {
            "skipStrings": true
        }]
    }
}
